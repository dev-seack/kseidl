{% extends "layouts/default.njk" %}
{% set page = "home" %}
{% block content %}
    <main id="main">

        <!-- Hero -->
        <section class="d-flex align-items-center min-vh-80 bg-skew bg-skew-primary overflow-hidden text-white">
            <div class="container py-5">
                <div class="row justify-content-center text-center">
                    <div class="col-lg-10 col-xl-8">
                        <h1 class="display-2 mb-4">Boost your business</h1>
                        <p class="lead mb-4 px-sm-5">Create an awesome website with an accessible Bootstrap theme.</p>
                        <a class="btn btn-pill btn-light btn-lg mb-7" href="https://themes.getbootstrap.com/product/boost/">Purchase now</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Demos -->
        <section class="container mt-n7 mb-5">
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <a href="app.html" class="stretched-link">
                        <img src="img/app.png" class="img-fluid img-thumbnail img-thumbnail-hover mb-4" alt="App demo">
                        <h2 class="h5 text-center text-dark">App</h2>
                    </a>
                </div>
                <div class="col-lg-6 mb-4">
                    <a href="course.html" class="stretched-link">
                        <img src="img/course.png" class="img-fluid img-thumbnail mb-4" alt="Course demo">
                        <h2 class="h5 text-center text-dark">Course</h2>
                    </a>
                </div>
                <div class="col-lg-6 mb-4">
                    <a href="event.html" class="stretched-link">
                        <img src="img/event.jpg" class="img-fluid img-thumbnail mb-4" alt="Event demo">
                        <h2 class="h5 text-center text-dark">Event</h2>
                    </a>
                </div>
                <div class="col-lg-6 mb-4">
                    <a href="saas.html" class="stretched-link">
                        <img src="img/saas.png" class="img-fluid img-thumbnail mb-4" alt="Saas demo">
                        <h2 class="h5 text-center text-dark">SaaS</h2>
                    </a>
                </div>
                <div class="col-lg-6 mb-4">
                    <a href="blog.html" class="stretched-link">
                        <img src="img/blog.jpg" class="img-fluid img-thumbnail mb-4" alt="Blog demo">
                        <h2 class="h5 text-center text-dark">Blog</h2>
                    </a>
                </div>
                <div class="col-lg-6">
                    <a href="article.html">
                        <img src="img/article.jpg" class="img-fluid img-thumbnail mb-4" alt="Demo page">
                        <h2 class="h5 text-center text-dark mb-5">Article</h2>
                    </a>
                </div>
            </div>
            <div class="text-center pt-2 pb-5">
                <a href="pages.html" class="link-cta">View all pages</a>
            </div>
        </section>

        <div class="bg-skew bg-skew-light">

            <!-- Icon blocks -->
            <section class="container">
                <h2 class="text-center mb-5 pt-3">Accessibility features</h2>
                <div class="row">
                    <div class="col-sm-6 col-md-4 mb-4 mb-md-5">
                        <div class="pr-lg-3">
                            <span class="icon icon-primary mb-3">
                                <i class="icon-inner fas fa-universal-access" aria-hidden="true"></i>
                            </span>
                            <h3 class="h4">ARIA</h3>
                            <p class="mb-md-0">Use of ARIA attributes to provide an accessible interaction.</p>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-4 mb-4 mb-md-5">
                        <div class="pr-lg-3">
                            <span class="icon icon-primary mb-3">
                                <i class="icon-inner fas fa-palette" aria-hidden="true"></i>
                            </span>
                            <h3 class="h4">Color Contrast</h3>
                            <p class="mb-md-0">The contrast ratio between text and background passes WCAG 2 level AA.</p>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-4 mb-4 mb-md-5">
                        <div class="pr-lg-3">
                            <span class="icon icon-primary mb-3">
                                <i class="icon-inner fas fa-keyboard" aria-hidden="true"></i>
                            </span>
                            <h3 class="h4">Keyboard Navigation</h3>
                            <p class="mb-md-0">You can navigate through the site only using the keyboard.</p>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-4 mb-4 mb-md-5">
                        <div class="pr-lg-3">
                            <span class="icon icon-primary mb-3">
                                <i class="icon-inner fas fa-volume-up" aria-hidden="true"></i>
                            </span>
                            <h3 class="h4">Screen Reader</h3>
                            <p class="mb-md-0">Reading and navigation tested with VoiceOver screen reader.</p>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-4 mb-4 mb-md-5">
                        <div class="pr-lg-3">
                            <span class="icon icon-primary mb-3">
                                <i class="icon-inner fab fa-html5" aria-hidden="true"></i>
                            </span>
                            <h3 class="h4">Semantic Structure</h3>
                            <p class="mb-md-0">Pages structured using semantic HTML.</p>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-4 mb-4 mb-md-5">
                        <div class="pr-lg-3">
                            <span class="icon icon-primary mb-3">
                                <i class="icon-inner fas fa-code" aria-hidden="true"></i>
                            </span>
                            <h3 class="h4">Valid Code</h3>
                            <p class="mb-md-0">W3C valid code to ensure the site works properly on all browsers.</p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Features -->
            <section class="container">
                <div class="row justify-content-lg-between align-items-lg-center py-4 py-lg-5">
                    <div class="col-lg-5 mb-4 mb-lg-0">
                        <h2>A new look</h2>
                        <hr class="sep border-primary ml-0 mb-3 text-left" role="presentation">
                        <p>Since this theme is based on Bootstrap, it includes all Bootstrap itself does but with new aesthetics.</p>
                        <a class="link-cta" href="style.html">See styles</a>
                    </div>
                    <div class="col-lg-6">
                        <img src="img/style.png" class="img-fluid img-thumbnail" alt="Boost theme style page">
                    </div>
                </div>
                <div class="row justify-content-lg-between align-items-lg-center py-4 py-lg-5">
                    <div class="col-lg-5 order-lg-2 mb-4 mb-lg-0">
                        <h2>Easy to customize</h2>
                        <hr class="sep border-primary ml-0 mb-3 text-left" role="presentation">
                        <p>Install the theme easily with just a few commands.</p>
                        <a class="link-cta" href="docs.html">See docs</a>
                    </div>
                    <div class="col-lg-6 order-lg-1">
                        <img src="img/install.png" class="img-fluid img-thumbnail" alt="Woman talking on the phone">
                    </div>

                </div>
            </section>

            <!-- Accordion -->
            <section class="container">
                <h2 class="my-5 text-center">Questions</h2>
                <div class="row justify-content-lg-center pb-5">
                    <div class="col-lg-9">
                        <div class="accordion" id="accordionQuestions">

                            <div class="card mb-2 shadow">
                                <div class="card-header" id="headingOne">
                                    <h3 class="card-title">
                                        <a class="collapsed" role="button" href="#collapseTwo" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                            What version of Bootstrap are the theme built on? <i class="fas fa-angle-down float-right rotate-icon" aria-hidden="true"></i>
                                        </a>
                                    </h3>
                                </div>
                                <div id="collapseTwo" class="collapse" aria-labelledby="headingOne" data-parent="#accordionQuestions">
                                    <div class="card-body">
                                        <p>The theme are built on versions of Bootstrap v4. As more Bootstrap updates are launched the theme will be updated as needed.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="card mb-2 shadow">
                                <div class="card-header" id="headingTwo">
                                    <h3 class="card-title">
                                        <a class="collapsed" role="button" href="#collapseOne" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                            What methods of payments are supported? <i class="fas fa-angle-down float-right rotate-icon" aria-hidden="true"></i>
                                        </a>
                                    </h3>
                                </div>
                                <div id="collapseOne" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionQuestions">
                                    <div class="card-body">
                                        <p >You can purchase the theme on Bootstrap Themes via any major credit/debit card (via Stripe) or with your Paypal account.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="card mb-2 shadow">
                                <div class="card-header" id="headingThree">
                                    <h3 class="card-title">
                                        <a class="collapsed" role="button" href="#collapseThree" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                            How do I get help with the theme? <i class="fas fa-angle-down float-right rotate-icon" aria-hidden="true"></i>
                                        </a>
                                    </h3>
                                </div>
                                <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionQuestions">
                                    <div class="card-body">
                                        <p>Support for the theme is given for 6 months after you purchase the theme and is specific to questions around functionality, bugs, and basic implementation.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="card mb-2 shadow">
                                <div class="card-header" id="headingFour">
                                    <h3 class="card-title">
                                        <a class="collapsed" role="button" href="#collapseFour" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                            Is this a WordPress theme? <i class="fas fa-angle-down float-right rotate-icon" aria-hidden="true"></i>
                                        </a>
                                    </h3>
                                </div>
                                <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordionQuestions">
                                    <div class="card-body">
                                        <p>No, this is a HTML theme made with Bootstrap. It doesn’t include any back-end functionality.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <hr class="sep border-primary" role="presentation">

            <!-- Call to action -->
            <section class="container py-5">
                <div class="text-center">
                    <h2 class="mb-4">Are you ready to start?</h2>
                    <div class="mb-4">
                        <a class="btn btn-pill btn-primary" href="https://themes.getbootstrap.com/product/boost/" role="button">Purchase now</a>
                    </div>
                    <a class="link-cta" href="components.html">Learn More</a>
                </div>
            </section>

        </div>

    </main>
{% endblock %}
